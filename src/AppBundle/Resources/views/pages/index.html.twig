{% extends "AppBundle::base.html.twig" %}

{%  block main %}

    <link rel="stylesheet" href="{{ asset('bundles/app/css/index-styles.css') }}">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="image-carousel" src="{{ asset('bundles/app/images/batman-gotham.jpg') }}" alt="Chania">
            </div>

            <div class="item">
                <img class="image-carousel" src="{{ asset('bundles/app/images/green-lantern.jpg') }}" alt="Chania">
            </div>

            <div class="item">
                <img class="image-carousel" src="{{ asset('bundles/app/images/superman.jpg') }}" alt="Flower">
            </div>

            <div class="item">
                <img class="image-carousel" src="{{ asset('bundles/app/images/green-lantern.jpg') }}" alt="Flower">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div id="boxes" class="box-info">
        <div id="plansBox" class="ghost-box">
            <span style="font-size: 80px; margin-bottom: 20px;" class="icon-stats-dots"></span>
            <span style="font-family: arcon; font-size: 20px">Haz que tu negocio crezca.</span>
        </div>
        <div id="visionBox" class="ghost-box">
            <span style="font-size: 80px; margin-bottom: 20px;" class="icon-shield"></span>
            <span style="font-family: arcon; font-size: 20px">Conoce lo que hacemos.</span>
        </div>
        <div id="usersBox" class="ghost-box">
            <span></span>
            <span style="font-size: 80px; margin-bottom: 20px;" class="icon-users"></span>
            <span style="font-family: arcon; font-size: 20px">Ofertas a tu alcance.</span>
        </div>
    </div>

{% endblock %}
{% block script %}

    <script>

        $(document).ready(function(){
            $("#plansBox").click(function(){
                window.location.href = '{{ path('location') }}';
            });

            $("#visionBox").click(function(){
                window.location.href = '{{ path('about_us') }}';
            });

            $("#usersBox").click(function(){
                window.location.href = '{{ path('location') }}';
            });
        });
    </script>

{% endblock %}