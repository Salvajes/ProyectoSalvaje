{% extends 'AppBundle::baseVendedores.html.twig' %}

{% block style %}
    <style>
        .bar{
            background-color: white;
            border-radius: 4px;
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }
        .bar li {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block content %}
    <ul class="bar">
        <li>
            <label for="misMenus" style="display: block;">Mis menús</label>
            <select name="misMenus" id="misMenus">
                <option value="0">Menu 1</option>
                <option value="1">Menu 2</option>
                <option value="2">Menu 3</option>
            </select>
        </li>
        <li>
            <span class="btn-action">Crear menú</span>
        </li>
    </ul>
{% endblock %}

{% block script %}
{% endblock %}