    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <script>
        function openNav() {
            $(".sidenav").css({"width": "240px"});
            $(".main").css({"margin-left": "240px"});
        }
        function closeNav() {
            $(".sidenav").css({"width": "0px"});
            $(".main").css({"margin-left": "0px"});
        }
        $(document).ready(function(){
            isOpen = false;
            $(".glyphicon-th-list").click(function(){
                if(!isOpen) {
                    openNav();
                    isOpen = true;
                } else {
                    closeNav();
                    isOpen = false;
                }

            })
        });
    </script>
