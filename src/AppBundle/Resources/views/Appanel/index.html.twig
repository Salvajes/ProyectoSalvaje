<!DOCTYPE html>
<html>
<head>
    <title>Dashboard - {% block title %}{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset("bundles/app/css/bootstrap.min.css") }}">
    <script type="text/javascript" src="{{ asset('bundles/app/js/jquery-1.12.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/bootstrap.min.js') }}"></script>

</head>
<body>
<style>
    .side-nav {
        height: 100vh;
        background-color: #3a3a3a;
        transition: all .5s;
    }
    .nav-close {
        margin-left: -770px;
    }
    .top-10 {
        margin-top: 10px;
    }
    .white-item {
        color: white;
        font-size: 1.2em;
    }
    .white-link-item {
        color: white;
        font-size: 1.2em;
        margin-left: 5px;
        transition: all .3s;
    }
    .white-link-item:hover {
        color: white;
        margin-left: 15px;
        text-decoration: none;
    }
    .white-link-item:focus {
        color: white;
        text-decoration: none;
    }
    .principal {

    }
    #menu {
        cursor: pointer;
    }

    @media (max-width: 770px) {
        .col-ssm-6 {
            width: 80%;
        }
    }

</style>
    <nav>
        <div class="menu-responsive" style="display: none">
            <span id="menu" class="glyphicon glyphicon-menu-hamburger" style="font-size: 1.5em; padding: 3px;"></span>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-ssm-6 side-nav">
            <div class="col-lg-12 col-md-12 center-block">
                {# Avatar picture #}
                <img src="{{ asset('avatar/' ~ app.user.avatarId.path) }}" alt=""
                     class="img-responsive img-circle top-10">

                <div class="top-10">
                    <p class="white-item"><span class="glyphicon glyphicon-user"></span>
                        <a href="{{ path("admin.users.index") }}" class="white-link-item">Usuarios</a></p>
                </div>
                <div class="top-10">
                    <p class="white-item"><span class="glyphicon glyphicon-log-out"></span>
                        <a href="{{ path("admin.logout") }}" class="white-link-item">Salir</a></p>
                </div>
            </div>
        </div>
    </nav>

    <section id="principal">
        <div class="col-lg-10 col-md-10 col-sm-10 principal">
            {% block content %}
            {% endblock %}
        </div>
    </section>


<script>

    function responsiveMenu() {
        var width = $(this).innerWidth();

        if (width < 770) {
            $(".side-nav").css({
                "position": "absolute",
                "z-index": "999"
            });
            $(".side-nav").addClass("nav-close");
            $(".menu-responsive").show();
            console.log(width)
        } else {
            $(".side-nav").css("position", "relative")
            $(".side-nav").removeClass("nav-close");
            $(".menu-responsive").hide();
            console.log(width)
        }
    }

    $(window).resize(function() {
        responsiveMenu();
    });

    $("#menu").click(function () {

        if ($(".side-nav").hasClass("nav-close")) {
            $(".side-nav").removeClass("nav-close");
        } else {
            $(".side-nav").addClass("nav-close");
        }

    });

    $(document).ready(function () {
        responsiveMenu();
    });



</script>
{% block script %}
{% endblock %}

</body>
</html>