{% extends 'AppBundle:Appanel:index.html.twig' %}
{% block content %}

    <style>
        .no-float {
            float: none;
        }
        .card {
            border-radius: .3em;
            border: solid 1px gray;
        }
        .link {
            text-decoration: none;
            color: black;
            font-size: 1em;
            transition: all .3s;
        }
        .link:hover {
            font-size: 1.2em;
            color: black;
        }
    </style>

    <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="top-10" id="controls" style="margin-left: 10px">
            <form id="the-form" action="{{ path("admin.users.index") }}">
            <button class="btn btn-default" onclick="location.href='{{ path("admin.users.new") }}'">Crear</button>
            <input class="form-control pull-right"
                   name="search" type="search" placeholder="Buscar" style="width: 20%">
            </form>
        </div>
    </div>
    </div>

    <div class="top-10 col-lg-12 col-md-12 col-sm-12">
        {% if users|length == 0 %}
        <p>No se han encontrado coincidencias</p>
        {% endif %}
        {% for user in users %}
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="card text-center">
                    <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-ssm-6 no-float center-block top-10 thumbnail">
                        <img src="{{ asset("avatar/" ~ user.path) }}" alt="Avatar"
                             class="img-responsive img-circle">
                    </div>
                    </div>
                    <p>{{ user.realname }}</p>
                    <p>{{ user.username }}</p>
                    <p>{{ user.email }}</p>
                    <a href="" class="link">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    {% if user.id!=app.user.id %}
                        <a href="{{ path("admin.users.disabled", {
                            "id" : user.id,
                            "username" : user.username,
                            "email" : user.email
                        }) }}" id="deleteUser" class="link">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
{% block script %}
    <script>

    </script>
{% endblock %}